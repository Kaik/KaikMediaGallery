{% form_theme form 'KaikmediaGalleryModule:Form:relation.additional.fields.html.twig'%}
<div class="container-fluid">
    {{ getstatusmsg() }}
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="row">
	<p><small><strong>{{ form_label(form.type) }}</strong> {{ form_widget(form.type, {'attr': {'class': 'not-input' }}) }}</small></p>	
    <div class="relation-details row">
    {% set vars = {'previews':previews} %}
        {% for detail in form.details %}        
       		 <div class="col-md-12">{{ form_widget(detail,vars)}}</div>
        {% endfor %}
    </div>					
	</div>
	</div>
	</div>
	{{ form_end(form) }} 
</div>
