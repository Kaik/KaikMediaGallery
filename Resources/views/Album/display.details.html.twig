<h3>
{{ __('Album')}}	{{ album.title }}
</h3>
<div class="row">
<div class="col-md-4">
<span class="fa fa-folder fa-5x"></span>
</div>
<div class="col-md-8">
<p><h4>#{{ album.id }} {{ __('Author') }}: {{ album.author.uname }}</h4></p>
<p><h6>{{ __('Description') }}:</h6>{{ album.description }}</p>
</div> 

<div class="col-md-12">
<h3>
{{ __('Pictures')}}
</h3>
        		{%for tmedia in album.media %}
                <div class="col-md-3">
                    <a href="#" class="thumbnail">
                      {% if tmedia.media.path  %}        
                      <img src="{{ app.request.scheme ~ '://' ~ app.request.host ~ '/web/uploads/' ~ settings.upload_dir ~ '/' ~ tmedia.media.path }}" />
                      {% else %}
                       <span class="fa fa-exclamation-triangle fa-2x"> <span/>
                       {{ __('File path is empty!') }}           
                      {% endif %}
                    </a>
                </div>         		
                {% else %}
                        <p class="alert alert-warning text-center"> {{ __('No files found') }} </p>
                {% endfor %}
</div>
</div>

