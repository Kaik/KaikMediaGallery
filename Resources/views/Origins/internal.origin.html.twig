<ul class="row list-unstyled">
	{%for mediaItem in media %}
	<li class="media-item {% if mediaItem.publicdomain == '1' %}origin-public {% endif %} origin-user col-md-2 item-{{ mediaItem.id }}"
		 role="checkbox"
		 aria-checked="false"
		 aria-label="{{ mediaItem.name }}"		 		 		 
		 data-id="{{ mediaItem.id }}" 
		 data-description="{{ mediaItem.description }}" 
		 data-public="{{ mediaItem.publicdomain }}" 
		 data-author="{{ mediaItem.author.uname }}"
		 data-ext="{{ mediaItem.ext }}" 
		 data-mimetype="{{ mediaItem.mimeType }}" 
		 data-size="{{ mediaItem.size }}"		 
		 data-legal="{{ mediaItem.legal }}"		 
		 data-relation="new" >
		 {% include "KaikmediaGalleryModule:Media:item.html.twig" with {'settings': settings, 'relation':false, 'original':mediaItem, 'css': ''}  %}
	</li>
	{% else %}
		<li><p class="alert alert-warning text-center"> {{ __('No files found') }} </p></li>
	{% endfor %}           
</ul>
