                    <a id="xuser_gallery" href="#user_gallery" aria-controls="user_gallery" role="tab" data-toggle="pill"><i class="fa fa-user"> </i> {{  __('My uploads') }}</a>
                </li>   
                <li role="presentation">           
                    <a id="xaddnew_gallery" href="#addnew_gallery" aria-controls="addnew_gallery" role="tab" data-toggle="pill"><i class="fa fa-upload"> </i> {{  __('Upload image') }}</a>
