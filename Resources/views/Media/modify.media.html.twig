{% form_theme form 'bootstrap_3_layout.html.twig' %}
    <h4>
    {% if media.id is defined %}
     
    {% endif %}    
    </h4>
<div class="container-fluid">
    {{ getstatusmsg() }}
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="row">
	<div class="col-md-6">
    {{ form_label(form.file) }} 
    {{ form_widget(form.file) }}    
    <br />
    {% if media.path is defined and media.path is not null %}        
    <a href="#" class="thumbnail"><img src="{{ app.request.scheme ~ '://' ~ app.request.host ~ '/web/uploads/' ~ settings.KaikmediaGalleryModule.upload.dir ~ '/' ~ media.path }}" /></a>
    {% else %}
                    
    {% endif %}
	</div>
	<div class="col-md-6">
	{{ form_label(form.name) }} 
    {{ form_widget(form.name) }}
    {{ form_label(form.path) }} 
    {{ form_widget(form.path) }}  
    {{ form_label(form.description) }} 
    {{ form_widget(form.description) }}
    {{ form_label(form.legal) }} 
    {{ form_widget(form.legal) }}
    {{ form_label(form.publicdomain) }} 
    {{ form_widget(form.publicdomain) }}                  
	</div>
	</div>
	{{ form_end(form) }} 
</div>
